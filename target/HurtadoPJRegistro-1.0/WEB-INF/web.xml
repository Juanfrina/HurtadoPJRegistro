<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <display-name>HurtadoPJRegistro</display-name>
    <description>Aplicación web de registro de usuarios con MVC, DAO y Factory</description>
    
    <!-- Página de bienvenida -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Configuración de sesión -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Páginas de error personalizadas -->
    <error-page>
        <error-code>404</error-code>
        <location>/JSP/error/error404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/JSP/error/error500.jsp</location>
    </error-page>
    
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/JSP/error/error.jsp</location>
    </error-page>
    
    <!-- Referencia a recursos JNDI -->
    <resource-ref>
        <description>Conexión a BD para usuario java2026</description>
        <res-ref-name>jdbc/Usuario</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <resource-ref>
        <description>Conexión a BD para admin registro</description>
        <res-ref-name>jdbc/AdminRegistro</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
</web-app>
